@model IEnumerable<FICCE.Models.Compra>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estantes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estantes.EstantesId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompraId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompraId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
