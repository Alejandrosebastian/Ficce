@{
    ViewData["Title"] = "Empleados";
}

<h2>Lista de empleados</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#IngresoEmpleado">Ingreso Empleado</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Telefono convencional</th>
            <th>Telefono movil</th>
            <th>direccion</th>
            <th>Empresa</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="ListaEmpleado"></tbody>
</table>







<div class="modal fade" id="IngresoEmpleado" tabindex="-1"
     role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Edificios
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">Empresa</label>
                        <input id="empresa" name="empresa" class="form-control" placeholder="ingrese el id de la empresa" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input id="nombre" name="nombre" class="form-control" placeholder="ingrese el nombre del empleado" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Apellido</label>
                        <input id="apellido" name="apellido" class="form-control" placeholder="ingrese el apellido del empleado" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Direccion</label>
                        <input id="direccion" name="direccion" class="form-control" placeholder="ingrese el direccion del empleado" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">correo</label>
                        <input id="correo" name="correo" class="form-control" placeholder="ingrese el correo del empleado" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Telefono Convencinal</label>
                        <input id="telefono_contacto" name="telefono_contacto" class="form-control" placeholder="ingrese el telefono del empleado" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Telefono movil</label>
                        <input id="telefono_movil" name="telefono_movil" class="form-control" placeholder="ingrese el telefono movil del empleado" />
                    </div>
                    <input id="id" name="id" hidden />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip"
                        title="con este boton usted guradara un nuevo cliente" onclick="grabaEmpleado()">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ImpresionEmpleado" tabindex="-1"
     role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document" id="areaImprimir">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Reportes de Empleado
                </h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table">
                        <thead>
                            <tr class="danger">
                                <td>Id Empleado</td>
                                <td>Nombre</td>
                                <td>Apellido</td>
                                <td>Direccion</td>
                                <td>Correo</td>
                                <td>Telefono convencion</td>
                                <td>Telefono movil</td>
                            </tr>
                        </thead>
                        <tbody id="CuerpoImpresion"> </tbody>
                    </table>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip"
                        title="con este boton usted guradara un nuevo cliente" onclick="Impresion()">
                    Imprimir
                </button>
            </div>
        </div>
    </div>
</div>