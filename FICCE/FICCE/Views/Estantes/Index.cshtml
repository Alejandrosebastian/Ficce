

<h2>Index</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#IngresoEstante" onclick="listaeventos(); listaplanta();">Nuevo estante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Largo
            </th>
            <th>
              Ancho
            </th>
            <th>
                Ubicacion
            </th>
            <th>
                Evento
            </th>
            <th>
                Planta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div class="modal fade" id="IngresoEstante" tabindex="-1"
     role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Nuevo Estante
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">
                            Ingrese un nuevo Estante
                        </label>
                        <div class="form-group">
                            <label class="control-label">Largo</label>
                            <input id="Largo" name="Largo" class="form-control" placeholder="ingrese el nombre " />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ancho</label>
                            <input id="Ancho" name="Ancho" class="form-control" placeholder="ingrese algun detalle" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ubicacion</label>
                            <input id="Ubicacion" name="Ubicacion" class="form-control" placeholder="ingrese algun detalle" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Evento</label>
                            <select id="EventoId" name="EventoId" required class="form-control">
                                <option value="0">Seleccione el evento</option>
                            </select>
                            <br />
                            <span id="mensajeper" class="alert alert-danger hidden">Seleccione el evento</span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Planta</label>
                            <select id="PlantaId" name="PlantaId" required class="form-control">
                                <option value="0">Seleccione la planta en la que esta ubicado el estante</option>
                            </select>
                            <br />
                            <span id="mensajeper" class="alert alert-danger hidden">Seleccione la planta en la que esta ubicado el estante</span>
                        </div>
                        <input id="id" name="id" hidden />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                                    data-dismiss="modal">
                                Cerrar
                            </button>
                            <button type="button" class="btn btn-primary" onclick="Guardaestante()">
                                Guardar
                            </button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



</div>

